{
  "name": "gestaogado",
  "version": "1.0.0",
  "private": true,
  "description": "Sistema de Gestao de Gado com integracao de balanca XR5000",
  "main": "electron/main.js",
  "scripts": {
    "build": "next build",
    "build:static": "next build && next export",
    "dev": "next dev",
    "electron:build": "npm run build:static && electron-builder",
    "electron:build:linux": "npm run build:static && electron-builder --linux",
    "electron:build:mac": "npm run build:static && electron-builder --mac",
    "electron:build:win": "npm run build:static && electron-builder --win",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "lint": "next lint",
    "start": "next start"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@supabase/ssr": "^0.0.10",
    "@supabase/supabase-js": "^2.38.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "date-fns": "^3.6.0",
    "geist": "^1.0.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.468.0",
    "next": "15.1.0",
    "next-themes": "0.4.6",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-leaflet": "^4.2.1",
    "recharts": "^2.15.0",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7",
    "tw-animate-css": "^1.2.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@serialport/parser-readline": "^12.0.0",
    "@tailwindcss/postcss": "^4.1.9",
    "@types/leaflet": "^1.9.8",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "postcss": "8.5.6",
    "serialport": "^12.0.0",
    "tailwindcss": "^4.1.9",
    "typescript": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.gestaogado.app",
    "productName": "GestaoGado",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "public/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.svg"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.svg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.svg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/icon.svg",
      "uninstallerIcon": "public/icon.svg"
    }
  }
}